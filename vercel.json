{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "assets/**",
            "use": "@vercel/static"
        },
        {
            "src": "*.{html,css}",
            "use": "@vercel/static"
        },
        {
            "src": "main.js",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}